<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnyPlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/darkOrange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/darkOrange</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">?attr/app_text</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/_statusBarColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!--defined-->
        <item name="app_bg">@color/white</item>
        <item name="app_text">@color/black</item>
        <item name="_statusBarColor">@color/white</item>
        <item name="bottom_bar_separation">@color/black</item>
        <item name="search_et_bg">#EFEFEF</item>

    </style>

    <style name="Theme.AnyPlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationIconStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">?attr/app_text</item>
    </style>

    <style name="OverflowIconStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?attr/app_text</item>
    </style>


    <style name="Theme.AnyPlay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="drawerArrowStyle">@style/NavigationIconStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowIconStyle</item>
    </style>

    <style name="Theme.AnyPlay.SplashScreen">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AnyPlay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>