<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnyPlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/darkOrange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/darkOrange</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColor">?attr/app_text</item>

        <!-- defined -->
        <item name="app_bg">@color/black</item>
        <item name="app_text">@color/white</item>
        <item name="_statusBarColor">@color/black</item>
        <item name="bottom_bar_separation">@color/white</item>
        <item name="search_et_bg">#262626</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/_statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>
</resources>